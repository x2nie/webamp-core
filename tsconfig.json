{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    "pretty": true
  },
  "include": [
    "js/**/*.js",
    "js/**/*.ts",
    "js/**/*.tsx",
    "modern/**/*.ts",
    "modern/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "demo/built",
    "modern/src/Dashboard.tsx"
  ]
}
