{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    "pretty": true
  },
  "include": [
    "js/**/*.js",
    "js/**/*.ts",
    "js/**/*.tsx",
    "modern/src/utils.ts",
    "modern/src/Emitter.ts",
    "modern/src/runtime/MakiObject.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "demo/built"]
}
